<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginRight="@dimen/padding_ten_dp"
    android:layout_marginLeft="@dimen/padding_ten_dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ingredientName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            tools:text="Flour"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/ingredientName"
            android:textSize="12sp"
            tools:text="Cups:"

            android:id="@+id/measureTextView"
            android:layout_marginTop="@dimen/ingre_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            tools:text="3"

            android:layout_toRightOf="@id/measureTextView"
            android:layout_marginTop="@dimen/ingre_margin_top"
            android:id="@+id/quantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>