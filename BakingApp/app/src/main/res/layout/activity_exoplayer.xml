<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_exoplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.biodun.bakingapp.ExoplayerActivity">
    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/exoPlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/exoplayer_height">

    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
    <android.support.v7.widget.CardView


        android:layout_marginTop="@dimen/padding_fifteen_dp"
        android:layout_margin="@dimen/padding_ten_dp"
        android:layout_below="@id/exoPlayer"
        android:id="@+id/step_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_ten_dp">
        <TextView
            android:textColor="@color/colorBlack"
            tools:text="Hello there "
            android:id="@+id/step_description_tv"
            android:layout_margin="@dimen/padding_ten_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
