<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"


        android:layout_margin="@dimen/padding_ten_dp"
       >
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:layout_marginTop="@dimen/ingre_margin_top"
                android:id="@+id/recipeName"
                android:layout_marginLeft="@dimen/ingre_margin_top"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                tools:text="Nutella Pie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/servingsText"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/ingre_margin_top"
                android:layout_below="@id/recipeName"
                tools:text="Servings :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/servingValueText"
                android:layout_marginTop="5dp"
                android:layout_below="@id/recipeName"
                android:layout_toRightOf="@id/servingsText"
                tools:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/recipeImage"
                android:src="@drawable/cheesecake"
                android:layout_marginRight="@dimen/padding_ten_dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/padding_ten_dp"
                android:layout_width="100dp"
                android:layout_height="80dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>